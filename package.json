{
  "name": "tycho-simulation-ts",
  "version": "0.1.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "description": "TypeScript bindings for Tycho simulation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "napi": {
    "name": "tycho-simulation-ts",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "x86_64-pc-windows-msvc",
        "aarch64-unknown-linux-gnu",
        "x86_64-unknown-linux-gnu"
      ]
    }
  },
  "files": [
    "dist",
    "index.node",
    "README.md",
    "LICENSE",
    "scripts"
  ],
  "scripts": {
    "artifacts": "napi artifacts",
    "build:native": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "clean": "rm -rf target index.node dist 2>/dev/null || true",
    "prepublishOnly": "npm run build",
    "preinstall": "npm run build && npm run build:ts",
    "postinstall": "npm run build",
    "prepare": "npm run build",
    "test": "jest",
    "universal": "napi universal",
    "version": "napi version",
    "build:ts": "tsc",
    "build": "node scripts/build.js",
    "test:amount": "NODE_OPTIONS='--loader ts-node/esm --experimental-specifier-resolution=node' ts-node examples/amount_out_test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dewiz-xyz/tycho-simulation-ts.git"
  },
  "keywords": [
    "tycho",
    "simulation",
    "defi",
    "blockchain",
    "napi-rs",
    "node-api"
  ],
  "author": "Dewiz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dewiz-xyz/tycho-simulation-ts/issues"
  },
  "homepage": "https://github.com/dewiz-xyz/tycho-simulation-ts#readme",
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^16.18.125",
    "dotenv": "^16.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.5.0"
  }
}
